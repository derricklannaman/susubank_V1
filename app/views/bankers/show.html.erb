<%= render 'shared/dashboard_navigation' %>

<div class="all_susu_panel">
  <%= render 'susus/susus' %>
</div><!-- End all_susu_panel -->


<div class="main_dashboard_container">

<div class="form" id="susu_builder_form">
  <div class="title_bar">
    <h3>susuBuilder</h3>
    <p>Use susubuilder to experiment with putting your susu together.</p>
  </div>
  <%= form_tag '/susubuilder', id: "susu_form", :remote => true do %>

  <div class="form_field_group">
    <label for="name">Name:</label>
    <%= text_field_tag 'name', nil, placeholder: 'Give your susu a nickname' %>
    <div>
      Total payout<br/>
      <%= text_field_tag 'pay_out', nil, :placeholder => '$0' %>
    </div>
    <div>
      Members:<br/>
      <%= number_field_tag 'num_of_members', nil, :in => 3...31, placeholder: 'Enter number of members here' %>
    </div>
    <div>
      Pay out frequency:<br/>
      <%= select_tag 'pay_out_freq', (options_for_select([ ['weekly', "weekly"], ['every 2 weeks', "every 2 weeks"], ['monthly', "monthly"] ])) %>
    </div>
    <div>
      Members pay in:<br/>
      <%= select_tag 'pay_in_freq', (options_for_select([['weekly', "weekly"], ['every 2 weeks', "every 2 weeks"], ['monthly', "monthly"]])) %>
    </div>
    <div>
      Member contribution:<br/>
      <%= text_field_tag 'member_contribution', 'calculate automatically', :disabled => true %>
    </div>
    <div>
      Susu duration:<br/>
      <%= text_field_tag 'duration', 'calculate automatically', :disabled => true %>
    </div>
    <div>
      <%= submit_tag 'Calculate', id: 'calculate_button'   %>
    </div>

    <div>
      <button id="dashboard_create_susu_button" >
        <%#= link_to "Create Susu", banker_susus_path(@banker), method: :post, id: "dynamic_create_button" %> <!-- this will post directly to the create method, but doesnt carry over inputted data -->

        <%= link_to "Create Susu", new_banker_susu_path(@banker), id:
        "dynamic_create_button"   %>
      </button>
    </div>
  </div><!-- End form_field_group -->
  <% end %>
</div>

<div id="calculations"></div>














