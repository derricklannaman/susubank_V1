<h1>Sign in</h1>

<%= form_tag '/signin' do %>
  <div class="field">
    Email
    <%= email_field_tag 'banker_email', placeholder = "Enter email address" %>
  </div>

  <div class="field">
    Password
    <%= password_field_tag 'password' %>
  </div>

  <div>
    <%= submit_tag 'Sign in' %>
  </div>
<% end %>
