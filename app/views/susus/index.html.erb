<h1>All susus</h1>
<button><%= link_to "<< back to dashboard", banker_path(@authenticated_user)   %></button>
<table>
    <tr>
      <th>Name </th>
      <th>Members: </th>
      <th>Pay out: </th>
      <th>Member contributions:</th>
      <th>Paid out:</th>
      <th>Duration: </th>
      <th>Actions</th>
    </tr>
<% @susus.each do |susu| %>

   <tr>
    <td><%= susu.name %></td>
    <td><%= susu.num_of_members %></td>
    <td><%= number_to_currency(susu.pay_out_amount) %></td>
    <td><%= number_to_currency(susu.pay_in_amount) %></td>
    <td><%= susu.pay_out_rotation %></td>
    <td><%= susu.length %></td>
      <td>
        <%= link_to "edit", edit_banker_susu_path(@authenticated_user, susu) %>
        <%= link_to "show", banker_susu_path(@authenticated_user, susu)%>
        <%= link_to "delete", banker_susu_path(@authenticated_user,susu), method: :delete, data: {confirm: 'Delete this susu?'} %>
      </td>
   </tr>

<% end %>


</table>